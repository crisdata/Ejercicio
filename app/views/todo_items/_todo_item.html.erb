<div class="row clearfix">
  <% if todo_item.completed? %>
    <div class="complete">
      <%= link_to "Marcar como Completo", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
    </div>

    <div class="todo_item">
      <p style="opacity: 0.4;"><strike><%= todo_item.contenido %></strike></p>
    </div>
    <div class="trash">
      <%= link_to "Eliminar", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: "Estás seguro?" } %>
    </div>
  <% else %>
    <div class="complete">
      <%= link_to "Marcar como Completo", complete_todo_list_todo_item_path(@todo_list, todo_item.id), method: :patch %>
    </div>

    <div class="todo_item">
      <p><%= todo_item.contenido %></p>
    </div>
    <div class="trash">
      <%= link_to "Eliminar", todo_list_todo_item_path(@todo_list, todo_item.id), method: :delete, data: {confirm: "Estás seguro?" } %>
    </div>
  <% end %>
</div>
